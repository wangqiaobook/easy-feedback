datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses a direct connection
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

model Feedback {
  id            String    @id @default(cuid())
  name          String?
  email         String?
  type          String?
  content       String?  @db.Text
  createdAt     DateTime @default(now())
}